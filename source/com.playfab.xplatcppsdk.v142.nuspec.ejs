        <!-- 
            The description can be used in package manager UI. Note that the
            nuget.org gallery uses information you add in the portal. 
        -->
        <description>PlayFab XPlatCppSdk</description>

        <!-- Copyright information -->
        <copyright>Copyright Â©2020 Microsoft Corp</copyright>

        <!-- Tags appear in the gallery and can be used for tag searches -->
        <tags>PlayFab Baas Paas JSON REST HTTP SSL API cloud liveops game gamedev native nativepackage</tags>

    </metadata>

